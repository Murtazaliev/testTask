@model TestTaskDomain.Models.CompanySubdivision

<div class="modal-content">
    <div class="modal-header">
        <h5>Удаление</h5>
        <a href="#" class="link-info" data-bs-dismiss="modal" area-hidden="true" >
            <i class="fa fa-close"></i>
        </a>

    </div>

    <div class="row modal-body">
        <form asp-action="Create" class="col-12">

            <input type="hidden" asp-for="Id" class="form-control" />

            <div class="form-group">
                <label asp-for="Name" class="control-label">
                    Подтвердите удаление <span>@Model.Name</span>
                </label>
                
            </div>

        </form>
    </div>
    <div class="text-right modal-footer">
        <a class="mr-15 btn btn-outline-secondary" data-bs-dismiss="modal" area-hidden="true">Отмена</a>
        <input type="button" onclick="SaveTreeNodeChange($('form').serialize(), 'Delete')" value="Удалить" class="btn btn-primary" />
    </div>
</div>